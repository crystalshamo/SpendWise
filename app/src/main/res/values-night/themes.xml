<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.SpendWise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (SpendWise blue) -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (dark gray for contrast) -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_blue</item>

        <!-- Optional customization -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>
